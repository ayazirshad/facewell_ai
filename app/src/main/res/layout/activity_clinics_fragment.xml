<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <!-- Filters row container (added top margin so it's not stuck to status bar) -->
        <LinearLayout
            android:id="@+id/filtersContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- two selects in one row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="8dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilClinicType"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:hint="Clinic type"
                    android:layout_marginEnd="6dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:endIconMode="dropdown_menu"
                    app:boxStrokeColor="@color/teal_mid"
                    app:boxBackgroundMode="outline">

                    <AutoCompleteTextView
                        android:id="@+id/actClinicType"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="none"
                        android:singleLine="true"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:textColor="@color/text_muted"
                        android:textColorHint="@color/text_muted"
                        android:background="@drawable/input_field_bg"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilRadius"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:hint="Radius"
                    android:layout_marginStart="6dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:endIconMode="dropdown_menu"
                    app:boxStrokeColor="@color/teal_mid"
                    app:boxBackgroundMode="outline">

                    <AutoCompleteTextView
                        android:id="@+id/actRadius"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="none"
                        android:singleLine="true"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:textColor="@color/text_muted"
                        android:textColorHint="@color/text_muted"
                        android:background="@drawable/input_field_bg"
                        />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- Search button full width -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSearchClinics"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:layout_marginTop="6dp"
                android:text="Search"
                android:textAllCaps="false"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:cornerRadius="10dp"
                app:strokeColor="@color/teal_mid"
                app:strokeWidth="2dp"
                android:backgroundTint="@color/teal_light"
                android:textColor="@color/teal_bg"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvNoClinics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:alpha="0.9"
            android:gravity="center"
            android:padding="8dp"
            android:text="No clinics found"
            android:textColor="@color/text_muted"
            android:textSize="16sp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvClinics"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/filtersContainer"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="12dp"
            android:clipToPadding="false"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
