<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="90dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <FrameLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/bg_home_header_round"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="28dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvGreeting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hello, User"
                        android:textColor="@color/on_teal"
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvQuestion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:text="How’s your face condition?"
                        android:textColor="@color/on_teal"
                        android:textSize="20sp" />
                </LinearLayout>
            </FrameLayout>

            <!-- WEATHER CARD: now VISIBLE by default (shows placeholders until data arrives) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardWeather"
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="12dp"
                app:strokeWidth="0dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/teal_light"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="10dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/ivWeatherIcon"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@drawable/ic_weather_placeholder"
                        android:contentDescription="weather icon"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvWeatherTemp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--°C"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/teal_bg"/>

                        <TextView
                            android:id="@+id/tvWeatherMain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Weather unavailable"
                            android:textSize="12sp"
                            android:textColor="@color/text_muted"/>
                        <!-- add this under tvWeatherMain -->
                        <TextView
                            android:id="@+id/tvWeatherPlace"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Unknown Location"
                            android:textSize="11sp"
                            android:textColor="@color/text_muted"
                            android:layout_marginTop="2dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="end">

                        <TextView
                            android:id="@+id/tvWeatherHumidity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Humidity: --"
                            android:textSize="12sp"
                            android:textColor="@color/text_muted"/>

                        <TextView
                            android:id="@+id/tvWeatherFeels"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Feels: --°C"
                            android:textSize="12sp"
                            android:textColor="@color/text_muted"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Promo card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPromo"
                android:layout_width="match_parent"
                android:layout_height="120dp"
               android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="0dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="2dp"
                app:strokeWidth="0dp"
                app:cardCornerRadius="12dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_promo_card"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="27dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvPromoTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Good Morning"
                            android:textColor="@color/teal_bg"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="Don’t forget to use sunscreen and re-apply it every 3 hours"
                            android:textColor="#88000000"
                            android:textSize="12sp" />
                    </LinearLayout>

                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Quick actions grid: 2x2 -->
            <GridLayout
                android:id="@+id/gridQuick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:padding="9dp">

                <!-- Skin -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/qaSkin"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    android:layout_columnWeight="1"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardElevation="2dp"
                    app:strokeColor="@color/input_border"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_skin"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Skin Health"
                            android:textSize="13sp"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Eye -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/qaEye"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    android:layout_columnWeight="1"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardElevation="2dp"
                    app:strokeColor="@color/input_border"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_eye"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Quick Eye Check"
                            android:textSize="13sp"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Mood/Stress -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/qaStress"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    android:layout_columnWeight="1"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardElevation="2dp"
                    app:strokeColor="@color/input_border"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_mood"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Mood Check"
                            android:textSize="13sp"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Full Face -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/qaFullFace"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_margin="8dp"
                    android:layout_columnWeight="1"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardElevation="2dp"
                    app:strokeColor="@color/input_border"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_fullface"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Full Face Scan"
                            android:textSize="13sp"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </GridLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
