<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="12dp"
    app:strokeWidth="0dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/input_fill">

    <!-- FrameLayout so we can overlay delete button at top-right -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivThumb"
                android:layout_width="92dp"
                android:layout_height="92dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_report_placeholder"
                android:contentDescription="preview"
                android:layout_marginEnd="8dp"
                android:adjustViewBounds="true"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eye"
                    android:textStyle="bold"
                    android:textColor="@color/teal_mid"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvSummaryShort"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Short summary or top finding here..."
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_marginTop="6dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2025-11-18"
                        android:textSize="12sp"
                        android:textColor="@color/text_muted"/>

                    <TextView
                        android:id="@+id/tvConfidence"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="82%"
                        android:textSize="12sp"
                        android:textColor="@color/text_muted"
                        android:layout_marginStart="12dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- delete button overlay -->
        <ImageButton
            android:id="@+id/btnDeleteReport"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end|top"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Delete report"
            android:padding="8dp"
            android:src="@drawable/ic_delete"
        app:tint="@color/text_muted"
        android:layout_margin="6dp"/>
    </FrameLayout>
</com.google.android.material.card.MaterialCardView>
