<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/reportRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Main vertical content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@android:color/white"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/back_arrow"
                app:tint="@color/black" />

            <TextView
                android:id="@+id/tvReportTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Full Face Scan Report"
                android:textStyle="bold"
                android:textColor="@color/teal_bg"
                android:textSize="18sp"/>
        </FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Preview Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:id="@+id/ivPreview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"/>
                </com.google.android.material.card.MaterialCardView>

                <!-- SKIN SECTION -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Skin Scan"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tvSkinLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Normal"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_muted"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/tvSkinAcc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Accuracy Level: 0.0%"
                    android:textSize="12sp"
                    android:textColor="@color/text_muted"
                    android:layout_marginTop="2dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvSkinPatches"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:overScrollMode="never"/>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:cardCornerRadius="10dp"
                    app:strokeWidth="0dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/input_fill">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Recommended care"
                            android:textStyle="bold"
                            android:textColor="@color/teal_bg"/>

                        <TextView
                            android:id="@+id/tvSkinRecSummary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_muted"
                            android:layout_marginTop="6dp"/>

                        <LinearLayout
                            android:id="@+id/llSkinTips"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- EYE SECTION spacing -->
                <View android:layout_width="match_parent" android:layout_height="12dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Eye Scan"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tvEyeLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Not detected"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_muted"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/tvEyeAcc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Accuracy Level: 0.0%"
                    android:textSize="12sp"
                    android:textColor="@color/text_muted"
                    android:layout_marginTop="2dp"/>

                <LinearLayout
                    android:id="@+id/llEyeTips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="6dp"/>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardEyeRecommendations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="10dp"
                    app:strokeWidth="0dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/input_fill">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tvEyeRecTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Recommended care"
                            android:textStyle="bold"
                            android:textColor="@color/teal_bg"/>

                        <TextView
                            android:id="@+id/tvEyeRecSummary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_muted"
                            android:layout_marginTop="6dp"/>

                        <LinearLayout
                            android:id="@+id/llEyeTipsCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- MOOD SECTION spacing -->
                <View android:layout_width="match_parent" android:layout_height="12dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mood Scan"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tvMoodLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Neutral"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_muted"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/tvMoodAcc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Accuracy Level: 0.0%"
                    android:textSize="12sp"
                    android:textColor="@color/text_muted"
                    android:layout_marginTop="2dp"/>

                <LinearLayout
                    android:id="@+id/llMoodTips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="6dp"/>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardMoodRecommendations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cardCornerRadius="10dp"
                    app:strokeWidth="0dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/input_fill">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/tvMoodRecTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Recommended care"
                            android:textStyle="bold"
                            android:textColor="@color/teal_bg"/>

                        <TextView
                            android:id="@+id/tvMoodRecSummary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text_muted"
                            android:layout_marginTop="6dp"/>

                        <LinearLayout
                            android:id="@+id/llMoodTipsCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="8dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- ACTIONS -->
                <View android:layout_width="match_parent" android:layout_height="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSaveReport"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="48dp"
                        android:text="Save Report"
                        android:textColor="@android:color/white"
                        app:backgroundTint="@color/teal_bg"
                        app:cornerRadius="12dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnVisitClinic"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_marginStart="8dp"
                        android:text="Visit Clinic"
                        android:textColor="@android:color/white"
                        app:backgroundTint="@color/teal_bg"
                        app:cornerRadius="12dp"/>
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGoHome"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Go Home"
                    android:textColor="@color/teal_bg"
                    android:backgroundTint="@android:color/white"
                    app:cornerRadius="12dp"
                    app:strokeColor="@color/teal_bg"
                    app:strokeWidth="2dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="16dp"/>

                <TextView
                    android:id="@+id/tvDisclaimer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Disclaimer: These are suggestions, not medical advice."
                    android:textSize="12sp"
                    android:textColor="@color/text_muted"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>
